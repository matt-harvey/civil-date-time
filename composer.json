{
    "name": "matt-harvey/civil-date-time",
    "description": "Civil date and time library for PHP",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "MattHarvey\\CivilDateTime\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Matthew Harvey",
            "email": "software@matthewharvey.net"
        }
    ],
    "keywords": [
      "date",
      "time",
      "civil",
      "civil date",
      "civil time",
      "civil date time"
    ],
    "homepage": "https://github.com/matt-harvey/civil-date-time",
    "require": {
      "php": ">=8.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.6"
    },
    "scripts": {
        "check": ["@test", "@stan"],
        "stan": "vendor/bin/phpstan analyse --level=7 src test",
        "test": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-text test"
    },
    "scripts-descriptions": {
      "test": "Run the tests"
    },
    "support": {
        "issues": "https://github.com/matt-harvey/civil-date-time/issues",
        "source": "https://github.com/matt-harvey/civil-date-time"
    }
}
